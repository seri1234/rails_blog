<% provide(:title, @user.name) %>
<div class = "row">
  <aside calss = "col-md-4">
      <section class="user_info">
        <h1>
          <%= @user.name %>
        </h1>
  </section>
  </aside>
    <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>投稿数 (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>